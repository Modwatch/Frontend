{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "*.ts"
  ],
  "compilerOptions": {
    "alwaysStrict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "ES2015"],
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true
  }
}
