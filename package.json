{
  "name": "modwatch",
  "version": "2.0.3",
  "private": true,
  "bin": {
    "modwatch": "pkg.js"
  },
  "scripts": {
    "local": "micro-dev index.js --port 3000",
    "pkg": "pkg . --out-path ./bin",
    "build": "webpack --config webpack.config.js --env.NODE_ENV=production",
    "watch": "webpack --watch --config webpack.config.js",
    "build:local": "webpack --config webpack.config.js --env.MODWATCH_ENV=local --env.NODE_ENV=production",
    "watch:local": "webpack --watch --config webpack.config.js --env.MODWATCH_ENV=local --env.NODE_ENV=production",
    "serve": "firebase serve --port 3000 --host 0.0.0.0"
  },
  "pre-commit": [
    "build:local",
    "pkg",
    "build"
  ],
  "main": "server.js",
  "dependencies": {
    "decko": "^1.2.0",
    "es6-promise": "^4.1.1",
    "jwt-decode": "^2.2.0",
    "micro": "^9.0.0",
    "microrouter": "^2.2.3",
    "minimist": "^1.2.0",
    "opn": "^5.1.0",
    "unfetch": "^2.1.2",
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^6.1.2",
    "babel-helper-vue-jsx-merge-props": "^2.0.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-vue-jsx": "^3.4.2",
    "babel-preset-env": "^1.5.2",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.4",
    "eslint": "^3.3.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "micro-dev": "^1.2.3",
    "pkg": "^4.2.5",
    "postcss": "^5.0.17",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-nesting": "^4.0.1",
    "pre-commit": "^1.2.2",
    "style-loader": "^0.18.2",
    "stylelint-config-recommended": "^1.0.0",
    "webpack": "^3.0.0"
  },
  "subdomain": "skyrimmodwatcher",
  "domains": [
    "modwat.ch",
    "www.modwat.ch"
  ],
  "pkg": {
    "scripts": "index.js",
    "assets": "./public/**/*"
  }
}
