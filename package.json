{
  "name": "modwatch",
  "version": "2.0.9",
  "private": true,
  "scripts": {
    "build": "webpack --env.NODE_ENV=production --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "serve": "firebase serve --port 3000 --host 0.0.0.0",
    "prettier": "prettier --write 'src/**/*.{js,jsx,css}'",
    "deploy:ci": "firebase use testing-ee4f4 --token $FIREBASE_TOKEN && firebase deploy --non-interactive --token $FIREBASE_TOKEN"
  },
  "precommit": [
    "prettier",
    "build"
  ],
  "main": "server.js",
  "dependencies": {
    "decko": "^1.2.0",
    "es6-promise": "^4.2.4",
    "jwt-decode": "^2.2.0",
    "unfetch": "^2.1.2",
    "vue": "^2.5.16",
    "vue-router": "^2.8.1",
    "vuex": "^2.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^6.1.2",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.11",
    "eslint": "^3.3.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "firebase-tools": "^3.18.4",
    "postcss": "^5.2.18",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.1.3",
    "postcss-nesting": "^4.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "style-loader": "^0.18.2",
    "stylelint-config-recommended": "^1.0.0",
    "webpack": "^3.11.0"
  },
  "subdomain": "skyrimmodwatcher",
  "domains": [
    "modwat.ch",
    "www.modwat.ch"
  ]
}
