{
  "name": "modwatch",
  "version": "2.0.8",
  "private": true,
  "scripts": {
    "prebuild": "rimraf \"public/dist/?(no)module/*\" && npm run postgen",
    "build:module": "rollup -c --environment NODE_ENV:production,NOMODULE:false,NOPOSTS:true,ADSENSE_ENABLED:false",
    "build:nomodule": "rollup -c --environment NODE_ENV:production,NOMODULE:true,NOPOSTS:true,ADSENSE_ENABLED:false",
    "build": "run-p build:*",
    "watch": "rollup -cw --environment NODE_ENV:development,ADSENSE_ENABLED:false",
    "tsc": "npx -p typescript tsc --noEmit",
    "postgen": "node postgen",
    "serve": "serve public",
    "premicro": "esbuild micro.ts --format=cjs --bundle --platform=node --outfile=micro.js",
    "micro": "micro ./micro.js -l tcp://0.0.0.0:3001",
    "prettier": "prettier --write 'src/**/*.{js,jsx,css,ts,tsx}'",
    "postinstall": "npm run postgen"
  },
  "precommit": [
    "prettier",
    "build"
  ],
  "main": "micro.js",
  "dependencies": {
    "@mdx-js/preact": "^1.6.16",
    "@modwatch/core": "^0.2.0",
    "jwt-decode": "^2.2.0",
    "preact": "^10.4.6",
    "unfetch": "^4.1.0",
    "unistore": "^3.5.2",
    "wouter-preact": "^2.5.1"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^1.6.16",
    "@modwatch/types": "^0.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/pluginutils": "^3.1.0",
    "@surma/rollup-plugin-off-main-thread": "^1.4.1",
    "colorette": "^1.2.1",
    "esbuild": "^0.6.11",
    "json5": "^2.1.3",
    "jwt-simple": "^0.5.6",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "mri": "^1.1.6",
    "npm-run-all": "^4.1.5",
    "postcss-custom-properties": "^9.1.1",
    "postcss-nesting": "^7.0.1",
    "postcss-url": "^8.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.22.1",
    "rollup-plugin-esbuild": "^2.4.2",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-visualizer": "^4.0.4",
    "serve": "^11.3.2",
    "tiny-glob": "^0.2.6",
    "tslib": "^2.0.0",
    "url-pattern": "^1.0.3"
  }
}
